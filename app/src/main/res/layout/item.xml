<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_shade"
        android:weightSum="5"
        android:padding="5dp"
        android:layout_margin="5dp"
        >
        <ImageView
            android:id="@+id/songConverImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/onno_groher_chad_img"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onno Groher Chad"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textAllCaps="true"
                />
            <TextView
                android:id="@+id/songDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Onno Groher Chand | অন্য গ্রহের চাঁদ Artist - Sohan Ali Cover - Tahsin Ariyan #onnogroherchand #tahsinariyan #cover."
                android:maxLines="2"
                android:textSize="14sp"
                android:textColor="#ADFFFFFF"
                android:textStyle="italic"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/playImg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/play_icon"
            android:tag="FINISHED"
            />

    </LinearLayout>

</LinearLayout>